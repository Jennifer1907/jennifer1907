source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"
gem "jekyll-sass-converter", "~> 2.0"
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# webrick is required for `jekyll serve` on Ruby 3.x (removed from stdlib)
gem "webrick"

# csv was removed from default gems in Ruby 3.4.0
gem "csv"

# base64 was removed from default gems in Ruby 3.4.0
gem "base64"

# bigdecimal was removed from default gems in Ruby 3.4.0
gem "bigdecimal"

gem "jekyll-environment-variables"
